<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fwf_cardview_myrewards"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="16dp"
    app:contentPaddingBottom="12dp"
    android:layout_margin="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/fwf_textview_rewardtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Free Beer at Zero40"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:fontFamily="@font/robotomedium"
            android:textSize="16sp"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/fwf_cardview_rewardcard"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:cardCornerRadius="12dp"
            android:layout_margin="16dp"
            android:layout_below="@+id/fwf_textview_rewardtitle"
            android:background="@color/black"
            android:backgroundTint="@color/black">
            <ImageView
                android:id="@+id/fwf_imageview_rewardimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/homepageimage"
                android:layout_margin="20dp"
                android:scaleType="fitXY" />
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/fwf_textview_useby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fwf_cardview_rewardcard"
            android:text="Use by "
            android:textSize="16sp"
            android:fontFamily="@font/robotomedium"
            android:textColor="@color/black"
            android:layout_alignStart="@+id/fwf_textview_rewardtitle"/>
        <TextView
            android:id="@+id/fwf_textview_usebydate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/fwf_textview_useby"
            android:layout_below="@+id/fwf_cardview_rewardcard"
            android:text="Oct 31 2019"
            android:textSize="16sp"
            android:fontFamily="@font/robotomedium"
            android:textColor="@color/black"/>
        <Button
            android:id="@+id/fwf_button_redeemnow"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignBottom="@+id/fwf_textview_useby"
            android:layout_alignEnd="@+id/fwf_cardview_rewardcard"
            android:layout_below="@+id/fwf_cardview_rewardcard"
            android:text="Redeem Now"
            android:textColor="@color/snow"
            android:fontFamily="@font/robotomedium"
            android:textAllCaps="false"
            android:background="@xml/button_round"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textAlignment="center"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>