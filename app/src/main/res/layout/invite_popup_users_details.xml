<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fwf_circleimageview_userimage"
        android:layout_width="@dimen/fwf_circleimageview_userimage_width"
        android:layout_height="@dimen/fwf_circleimageview_userimage_height"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/fwf_circleimageview_userimage_marginstart"
        android:layout_marginEnd="@dimen/fwf_circleimageview_userimage_marginend"
        android:layout_marginTop="@dimen/fwf_circleimageview_userimage_margintop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fwf_textview_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/fwf_textview_username_margintop"
        android:textColor="@color/black"
        android:layout_below="@+id/fwf_circleimageview_userimage"
        android:textAlignment="center"
        android:maxLines="2"
        android:textSize="@dimen/fwf_textview_username_textsize"
        app:layout_constraintEnd_toEndOf="@+id/fwf_circleimageview_userimage"
        app:layout_constraintStart_toStartOf="@+id/fwf_circleimageview_userimage"
        app:layout_constraintTop_toBottomOf="@+id/fwf_circleimageview_userimage" />

</RelativeLayout>