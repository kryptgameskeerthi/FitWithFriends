<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/drab"
    tools:context=".activity.WelcomeActivity">

    <ImageView
        android:id="@+id/fwf_imageview_welcomeimage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.7"
        android:scaleType="fitXY"
        android:src="@drawable/homepageimage"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fwf_textview_appnamelineone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="140dp"
        android:alpha="1.5"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="@string/app_name1"
        android:textColor="@color/snow"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/fwf_textview_appnamelinetwo"
        app:layout_constraintEnd_toEndOf="@+id/fwf_imageview_welcomeimage"
        app:layout_constraintStart_toEndOf="@+id/fwf_imageview_applogo"
        app:layout_constraintTop_toTopOf="@+id/fwf_imageview_applogo" />

    <TextView
        android:id="@+id/fwf_textview_appnamelinetwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="20dp"
        android:alpha="1.5"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="@string/app_name2"
        android:textColor="@color/snow"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/fwf_imageview_applogo"
        app:layout_constraintEnd_toEndOf="@+id/fwf_imageview_welcomeimage"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toEndOf="@+id/fwf_imageview_applogo"
        app:layout_constraintTop_toBottomOf="@+id/fwf_textview_appnamelineone" />


    <ImageView
        android:id="@+id/fwf_imageview_applogo"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="8dp"
        android:alpha="1.5"
        android:scaleType="fitXY"
        android:src="@drawable/ic_dummy_logo_light"
        app:layout_constraintBottom_toBottomOf="@+id/fwf_imageview_welcomeimage"
        app:layout_constraintEnd_toStartOf="@+id/fwf_textview_appnamelineone"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/fwf_imageview_welcomeimage"
        app:layout_constraintTop_toTopOf="@+id/fwf_imageview_welcomeimage"
        app:layout_constraintVertical_bias="0.589" />

    <TextView
        android:id="@+id/fwf_textview_apptaglineone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/app_tag1"
        android:textColor="@color/snow"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fwf_imageview_welcomeimage"
        app:layout_constraintVertical_bias="0.306" />

    <TextView
        android:id="@+id/fwf_textview_apptaglinetwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-smallcaps"
        android:text="@string/app_tag2"
        android:textColor="@color/snow"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.348"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fwf_textview_apptaglineone"
        app:layout_constraintVertical_bias="0.048" />

</androidx.constraintlayout.widget.ConstraintLayout>