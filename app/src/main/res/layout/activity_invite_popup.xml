<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

<androidx.cardview.widget.CardView

        android:id="@+id/fwf_cardview_pendinginvitepopup"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_gravity="center"
        android:background="@color/snow"
        app:cardCornerRadius="20dp">

        <RelativeLayout
            android:id="@+id/fwf_layout_framelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fwf_imageview_userimage"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/homepageimage"
                android:layout_alignParentStart="true"
                android:layout_margin="20dp"/>
            <TextView
                android:id="@+id/fwf_textview_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scott Middough"
                android:layout_toEndOf="@id/fwf_imageview_userimage"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="32dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginStart="16dp"/>
            <TextView
                android:id="@+id/fwf_textview_missioninvite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fwf_textview_username"
                android:layout_toEndOf="@+id/fwf_imageview_userimage"
                android:text="Sent you a Mission Invite"
                android:textColor="@color/steel"
                android:textSize="16sp"
                android:layout_marginTop="8dp"/>
            <TextView
                android:id="@+id/fwf_textview_missiontitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Run 100 km in 7 days"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/fwf_textview_missioninvite"
                android:layout_marginTop="36dp"
                />
            <View
                android:id="@+id/fwf_view_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/fwf_textview_missiontitle"
                android:layout_marginTop="8dp"
                android:background="@color/ice"/>
            <TextView
                android:id="@+id/fwf_textview_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fwf_view_line"
                android:text="Team"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:layout_centerHorizontal="true"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fwf_layout_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/fwf_textview_team"
                android:layout_above="@+id/fwf_view_linetwo"
                />

            <View
                android:id="@+id/fwf_view_linetwo"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_above="@+id/fwf_view_buttonseperatorline"
                android:backgroundTint="@color/ice"
                android:background="@color/ice"/>

            <View
                android:id="@+id/fwf_view_buttonseperatorline"
                android:layout_width="2dp"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:backgroundTint="@color/ice"
                android:background="@color/ice"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/fwf_view_linetwo"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/fwf_button_accept"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Approve"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:textColor="@color/sage"
                    android:backgroundTint="@color/snow"
                    android:layout_marginEnd="1dp"
                    android:layout_marginTop="-6dp"
                    android:layout_marginBottom="-6dp"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/fwf_button_reject"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textSize="12sp"
                    android:backgroundTint="@color/snow"
                    android:textColor="@color/rust"
                    android:text="Reject"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="-6dp"
                    android:layout_marginBottom="-6dp"/>
            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>