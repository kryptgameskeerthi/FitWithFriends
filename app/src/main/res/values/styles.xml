<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/robotoregular</item>
    </style>

    <style name="AppCompatNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:fontFamily">@font/robotoregular</item>
    </style>


    <style name="NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fontFamily">@font/robotoregular</item>
    </style>

    <style name="button_round" >
        <item name="android:backgroundTint"> @color/sage </item>
    </style>

    <style name="create_mission_background">
        <item name="android:background">@color/steel</item>
    </style>

    <style name="Demo_Text">
        <item name="android:paddingLeft">4px</item>
        <item name="android:paddingBottom">4px</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="BottomNavigationTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/rust</item>
        <item name="android:textColorSecondary">@color/mdtp_transparent_black</item>
        <item name="android:fontFamily">@font/robotoregular</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@color/snow</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/robotoregular</item>

    </style>


    <style name="calender_theme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:colorControlActivated">@color/rust</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/black</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/black</item><!--days of the week-->
        <item name="android:background">@color/snow</item>
        <item name="android:selectedWeekBackgroundColor">@color/rust</item>
    </style>




</resources>
